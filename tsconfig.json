{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "stripInternal": true,
        "importHelpers": false,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "declaration": true,
        "declarationDir": "bin",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "sourceMap": true,
        "lib": ["dom", "es2015", "es5"],
        "outDir":"bin",
        "ignoreDeprecations": "5.0",
    },
    "include": [
        "src/index.ts",
        "src/database.ts",
        "src/test-single.ts",
        "src/test-multi.ts",
        "src/compact.ts",
        "src/lib_bloom.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}